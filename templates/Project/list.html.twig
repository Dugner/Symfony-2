{% extends 'base.html.twig' %}

{% block title %}wf3tm list of projects{% endblock %}

{% block body %}
	<div class="container">
	    {% if projects is empty %}
			<p>No projects found in the application</p>
		{% else %}
        <table class="table table-striped">
        	<thead>
        		<tr>
        			<th>Creation date</th>
        			<th>Title</th>
        			<th>Responsible</th>
					<th>Picture</th>
        		</tr>
        	</thead>
        	<tbody>
        		{% for project in projects %}
        			<tr>
        				<td>{{ project.getCreationDate()|date('Y-m-d H:i:s') }}</td>
        				<td>{{ project.getTitle() }}</td>
        				<td>{{ project.getResponsible().getName() }}</td>
						{% if project.getThumbnail() is not empty %}
							<td><img src="{{ path('download_document', {'document' : project.getThumbnail().getId()}) }}" width='40px'></td>
						{% else %}
							<td></td>
						{% endif %}
        			</tr>
        		{% endfor %}
        	</tbody>
        </table>
		{% endif %}  
    </div>


	<div class="container">
	    {{ form(project_list) }} 
    </div>
	

	
	
{% endblock %}

